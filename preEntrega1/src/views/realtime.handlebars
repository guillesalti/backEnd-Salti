<div class="formContainer" style="display: flex;">
  <form id="add" style="flex: 1;">
    <h3>Agregar producto:</h3>
    <div>
        <label>Titulo:</label>
        <input type="text" id="title" />
    </div>
    <div>
        <label>Descripción:</label>
        <textarea id="description"></textarea>
    </div>
    <div>
      <label>Price:</label>
      <input type="text" id="price" />
    </div>
    <div>
      <label>Thumbnail:</label>
      <input type="text" id="thumbnail" />
    </div>
    <div>
        <div>
            <label>Código:</label>
            <input type="text" id="code">
        </div>
        <div>
            <label>Stock:</label>
            <input type="number" id="stock">
        </div>
        <button id="addProductBtn">Añadir producto</button>
    </form>
</div>

 <form id="delete" style="flex: 1; margin-left: 20px;">
    <h3>Eliminar producto:</h3>
    <label>Product ID:</label>
    <input type="text" id="productId" />
    <button id="deleteProductBtn">Eliminar producto</button>
  </form>
</div>


<div class="listGroup">
    {{#each products}}
    <div class="cardProduct">
        <div class="imgCardProduct">
            <img src="{{this.thumbnail}}" alt="{{this.name}}" />
        </div>
        <div class="infoCardProduct">
            <h3 class="titleCardProduct">{{this.title}}</h3>
            <p class="descriptionCardProduct">{{this.description}}</p>
            <p class="priceCardProduct">{{this.price}}</p>
            <p class="stockCardProduct">{{this.stock}}</p>
            <p class="codeCardProduct">{{this.code}}</p>
            <p>{{this.id}}</p>
        </div>
    </div>
    {{/each}}
</div>